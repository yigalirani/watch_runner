{
  "compilerOptions": {
    "target": "ES2022",                // JS output target (change if needed)
    "module": "ESNext",              // or "ESNext" if you're using ES modules
    "declaration": true,               // <-- generate .d.ts files
    "outDir": "dist",                  // output directory for compiled files
    "rootDir": "src",                  // your TypeScript source folder
    "strict": true,                    // enable all strict type-checking options
    "esModuleInterop": true,           // smoother interop with CommonJS modules
    "skipLibCheck": true,              // speed up compilation
    "sourceMap": true                  // (optional) generate .map files for debugging
  },
  "include": ["src/**/*"],             // include all .ts files in src/
  "exclude": ["node_modules", "dist"]  // avoid compiling output & deps
}